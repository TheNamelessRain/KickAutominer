<Window x:Class="KickAutominer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:vm="clr-namespace:KickAutominer.ViewModels"
        xmlns:attached="clr-namespace:KickAutominer.Attached"
        Title="Kick Autominer" MinWidth="1200" MinHeight="600">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <wv2:WebView2 
            Source="https://kick.com"
            attached:WebView2Initializer.Initialize="True"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,5">
            <Button Content="{Binding LoadDropsButton}"
                    Width="200" Margin="5"
                    Command="{Binding LoadDropsCommand}"/>
            <Button Content="{Binding FarmStat}"
                    Width="140" Margin="5"
                    Command="{Binding StartFarmCommand}"/>
            <Button Content="{Binding LoadPicBtnText}"
                    Width="160" Margin="5"
                    Command="{Binding loadPicCommand}"/>
            <CheckBox Content="Выключить звук"
                       Margin="5"
                      IsChecked="{Binding MuteBrowser}"/>
        </StackPanel>

        <!-- Выбор тем
        <ComboBox ItemsSource="{Binding Themes,UpdateSourceTrigger=PropertyChanged}" 
                  HorizontalAlignment="Right" Grid.Row="1" Margin="5" Width="120"
                  SelectedItem="{Binding SelectedTheme}"/>
        -->

        <ListBox ItemsSource="{Binding Rewards}" Grid.Row="2" 
                 SelectionMode="Single">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0,1">

                        <!-- Верхняя строка: Reward -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <CheckBox IsChecked="{Binding IsSelected}"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>

                            <TextBlock Text="{Binding GameName}" FontWeight="Bold"/>
                            <TextBlock Text=" — " FontWeight="Bold"/>
                            <TextBlock Text="{Binding RewarGroupdName}" FontWeight="Bold"/>
                        </StackPanel>

                        <!-- Теперь список Drop под Reward -->
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding Rewards}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{DynamicResource SPDrop}">
                                            <StackPanel Orientation="Vertical"  Width="180">
                                                <Image Source="{Binding Image}" Width="150" Height="150" Margin="0,0,0,5">
                                                    <Image.Style>
                                                        <Style TargetType="Image">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Image}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>
                        
                                                <TextBlock Text="{Binding Title}" FontWeight="Bold" MinHeight="40"
                                                           TextAlignment="Center" Margin="0,0,0,5" TextWrapping="Wrap"/>

                                                <Grid>
                                                    <ProgressBar Minimum="0" Maximum="{Binding RequiredMinutes}" Value="{Binding WatchedMinutes}" Height="20"/>
                                                    <TextBlock Text="{Binding Proc}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5,0,5,0" FontWeight="Bold"/>
                                                </Grid>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock Text="За донаты буду признателен (юmoney: 4100 1202 4035 507)" Grid.Row="3" Margin="10,0"/>
    </Grid>
</Window>
